@Override
public String ask(String model, String prompt) throws Exception {
URL u = new URL("https://api.openai.com/v1/chat/completions");
HttpURLConnection conn = (HttpURLConnection) u.openConnection();
conn.setRequestMethod("POST");
conn.setDoOutput(true);
conn.setRequestProperty("Content-Type", "application/json; charset=utf-8");
conn.setRequestProperty("Authorization", "Bearer " + apiKey);


String payload = "{\n" +
" \"model\": " + jsonQuote(model) + ",\n" +
" \"messages\": [ { \"role\": \"user\", \"content\": " + jsonQuote(prompt) + " } ]\n" +
"}";


byte[] out = payload.getBytes(StandardCharsets.UTF_8);
conn.setFixedLengthStreamingMode(out.length);
conn.connect();
try (OutputStream os = conn.getOutputStream()) {
os.write(out);
}


int code = conn.getResponseCode();
InputStreamReader isr = new InputStreamReader(
code >= 400 ? conn.getErrorStream() : conn.getInputStream(), StandardCharsets.UTF_8);
try (BufferedReader br = new BufferedReader(isr)) {
StringBuilder sb = new StringBuilder();
String line;
while ((line = br.readLine()) != null) sb.append(line).append('\n');
return extractOpenAIContent(sb.toString());
}
}


// Very small JSON extraction: finds the first occurrence of "content":"..."
private String extractOpenAIContent(String json) {
String token = "\"content\"\"\:"; // deliberate unlikely pattern to avoid accidental match
// Instead search for \"content\" :
int idx = json.indexOf("\"content\"");
if (idx < 0) return json;
int start = json.indexOf('"', idx + 9);
// Find the next colon after the key
int colon = json.indexOf(':', idx + 9);
if (colon < 0) return json;
// Find the starting quote of the content value
int q = json.indexOf('"', colon);
if (q < 0) return json;
int i = q + 1;
StringBuilder sb = new StringBuilder();
boolean esc = false;
while (i < json.length()) {
char c = json.charAt(i++);
if (esc) { sb.append(c); esc = false; continue; }
if (c == '\\') { esc = true; continue; }
if (c == '"') break;
sb.append(c);
}
return sb.toString().replaceAll("\\\\n", "\n");
}
